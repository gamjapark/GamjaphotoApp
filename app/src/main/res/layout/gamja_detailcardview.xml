<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="20dp"
                                    card_view:cardCornerRadius="5dp"
                                    android:id="@+id/myCardView">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView android:id="@+id/photoDetailTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="20dp"
                  android:text="temptext"/>

        <TextView android:id="@+id/photoViewStatic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:layout_marginTop="30dp"
                  android:layout_toStartOf="@id/photoViewNum"
                  android:layout_toLeftOf="@id/photoViewNum"
                  android:text="views : "/>

        <TextView android:id="@+id/photoViewNum"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:layout_marginTop="30dp"
                  android:layout_marginEnd="20dp"
                  android:layout_marginRight="20dp"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:text="tempNum"/>
        <ImageView
                android:id="@+id/photoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoDetailTitle"/>


        <TextView android:id="@+id/photoDateUploadStatic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_below="@id/photoImage"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentLeft="true"
                  android:text="Date Uploaded : "/>

        <TextView android:id="@+id/photoDateUploadTxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:layout_below="@id/photoImage"
                  android:layout_toEndOf="@id/photoDateUploadStatic"
                  android:layout_toRightOf="@id/photoDateUploadStatic"
                  android:text="tempDate"/>


        <TextView android:id="@+id/photoLastUpdateStatic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_below="@id/photoDateUploadStatic"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentLeft="true"
                  android:text="Last Update : "/>

        <TextView android:id="@+id/photoLastUpdateTxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:layout_below="@id/photoDateUploadStatic"
                  android:layout_toEndOf="@id/photoLastUpdateStatic"
                  android:layout_toRightOf="@id/photoLastUpdateStatic"
                  android:text="tempDate"/>


        <ImageView
                android:id="@+id/ownerPhoto"
                android:src="@drawable/owner"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/photoLastUpdateStatic"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/ownerUserName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_marginStart="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="15dp"
                  android:layout_below="@id/photoLastUpdateStatic"
                  android:layout_toEndOf="@id/ownerPhoto"
                  android:layout_toRightOf="@id/ownerPhoto"
                  android:text="tempUserName"/>
        <TextView android:id="@+id/ownerLocationStatic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_toEndOf="@id/ownerPhoto"
                  android:layout_toRightOf="@id/ownerPhoto"
                  android:layout_below="@id/ownerUserName"
                  android:layout_marginStart="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="7dp"
                  android:text="Location : "/>
        <TextView android:id="@+id/ownerLocationTxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:layout_toEndOf="@id/ownerLocationStatic"
                  android:layout_toRightOf="@id/ownerLocationStatic"
                  android:layout_below="@id/ownerUserName"
                  android:layout_marginTop="10dp"
                  android:text="tempLocation"/>

        <TextView android:id="@+id/photoDescriptionStatic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="10dp"
                  android:layout_below="@id/ownerPhoto"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentLeft="true"
                  android:text="Description"/>

        <TextView android:id="@+id/photoDescriptionTxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_below="@id/photoDescriptionStatic"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentLeft="true"
                  android:text="tempDescription"/>

        <TextView android:id="@+id/photoURLStatic"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="10dp"
                  android:layout_below="@id/photoDescriptionTxt"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentLeft="true"
                  android:text="URL"/>

        <TextView android:id="@+id/photoURLTxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:layout_marginStart="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_below="@id/photoURLStatic"
                  android:layout_alignParentStart="true"
                  android:layout_alignParentLeft="true"
                  android:text="tempURL"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>