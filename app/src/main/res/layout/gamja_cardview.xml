<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    card_view:cardCornerRadius="5dp"
                                    card_view:cardElevation="10dp"
                                    android:id="@+id/mCard_View">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView
                android:id="@+id/photoSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:padding="5dp"/>
        <TextView android:id="@+id/photoIndex"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:layout_marginStart="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="20dp"
                  android:layout_toEndOf="@id/photoSmall"
                  android:layout_toRightOf="@id/photoSmall"
                  android:text="temptext"/>

        <TextView android:id="@+id/photoTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:layout_toEndOf="@id/photoSmall"
                  android:layout_toRightOf="@id/photoSmall"
                  android:layout_below="@id/photoIndex"
                  android:layout_marginStart="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="20dp"
                  android:text="temptext"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

